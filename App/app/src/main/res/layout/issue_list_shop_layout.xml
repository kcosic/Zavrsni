<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/row_item_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:layout_weight="4.5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="4.5"
            android:orientation="vertical">

            <TextView
                style="@style/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/etPrice"
                android:text="@string/price" />

            <EditText
                android:id="@+id/etPrice"
                style="@style/textField"
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:importantForAutofill="no"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_weight="4.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserAccepted"
                style="@style/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="@string/user_accepted" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnDeleteIssue"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/text_dark_100"
            android:contentDescription="@string/menu"
            android:src="@drawable/trash_solid"
            tools:src="@drawable/trash_solid" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:orientation="vertical">

        <TextView
            style="@style/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/etDescription"
            android:text="@string/description" />

        <EditText
            android:id="@+id/etDescription"
            style="@style/bigTextField"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:importantForAutofill="no"
            android:inputType="text" />

    </LinearLayout>


</LinearLayout>