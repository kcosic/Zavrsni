<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        tools:context=".activity.HomeUserActivity">

        <ScrollView
            style="@style/home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    style="@style/card_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                style="@style/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/account_info"
                                android:textAlignment="center" />

                            <ImageButton
                                android:id="@+id/btnAccountInfoExpand"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="white"
                                android:src="@drawable/chevron_down_small_primary"
                                android:visibility="visible"
                                tools:ignore="ContentDescription"
                                tools:src="@drawable/chevron_down_small_primary" />

                            <ImageButton
                                android:id="@+id/btnAccountInfoCollapse"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="white"
                                android:src="@drawable/chevron_up_small_primary"
                                android:visibility="gone"
                                tools:ignore="ContentDescription"
                                tools:src="@drawable/chevron_up_small_primary" />
                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/accountInfoContent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"

                                    android:text="@string/username" />

                                <EditText
                                    android:id="@+id/etUserName"
                                    style="@style/textField"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="6"
                                    android:enabled="false" />

                                <ImageButton
                                    android:id="@+id/btnEditUserName"
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="white"
                                    android:contentDescription="@string/menu"
                                    android:src="@drawable/pen_to_square_small_primary"
                                    tools:src="@drawable/pen_to_square_small_primary" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"

                                    android:text="@string/email" />

                                <EditText
                                    android:id="@+id/etEmail"
                                    style="@style/textField"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="6"
                                    android:enabled="false" />

                                <ImageButton
                                    android:id="@+id/btnEditEmail"
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="white"
                                    android:contentDescription="@string/menu"
                                    android:src="@drawable/pen_to_square_small_primary"
                                    tools:src="@drawable/pen_to_square_small_primary" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"

                                    android:text="@string/password" />

                                <Button
                                    android:id="@+id/btnResetPassword"
                                    style="@style/infoButton"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="7"
                                    android:text="@string/reset_password" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/card_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                style="@style/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/personal_info"
                                android:textAlignment="center" />

                            <ImageButton
                                android:id="@+id/btnPersonalInfoExpand"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="white"
                                android:contentDescription="@string/menu"
                                android:src="@drawable/chevron_down_small_primary"
                                android:visibility="visible"
                                tools:src="@drawable/chevron_down_small_primary" />

                            <ImageButton
                                android:id="@+id/btnPersonalInfoCollapse"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="white"
                                android:contentDescription="@string/menu"
                                android:src="@drawable/chevron_up_small_primary"
                                android:visibility="gone"
                                tools:src="@drawable/chevron_up_small_primary" />
                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/personalInfoContent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"

                                    android:text="@string/first_name" />

                                <EditText
                                    android:id="@+id/etFirstName"
                                    style="@style/textField"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="6"
                                    android:enabled="false" />

                                <ImageButton
                                    android:id="@+id/btnEditFirstName"
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="white"
                                    android:contentDescription="@string/menu"
                                    android:src="@drawable/pen_to_square_small_primary"
                                    tools:src="@drawable/pen_to_square_small_primary" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"

                                    android:text="@string/last_name" />

                                <EditText
                                    android:id="@+id/etLastName"
                                    style="@style/textField"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="6"
                                    android:enabled="false" />

                                <ImageButton
                                    android:id="@+id/btnEditLastName"
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="white"
                                    android:contentDescription="@string/menu"
                                    android:src="@drawable/pen_to_square_small_primary"
                                    tools:src="@drawable/pen_to_square_small_primary" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"

                                    android:text="@string/date_of_birth" />

                                <EditText
                                    android:id="@+id/etDob"
                                    style="@style/textField"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="6"
                                    android:enabled="false" />

                                <ImageButton
                                    android:id="@+id/btnEditDob"
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="white"
                                    android:contentDescription="@string/menu"
                                    android:src="@drawable/pen_to_square_small_primary"
                                    tools:src="@drawable/pen_to_square_small_primary" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/card_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                style="@style/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/vehicles"
                                android:textAlignment="center" />

                            <ImageButton
                                android:id="@+id/btnVehiclesExpand"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="white"
                                android:contentDescription="@string/menu"
                                android:src="@drawable/chevron_down_small_primary"
                                android:visibility="visible"
                                tools:src="@drawable/chevron_down_small_primary" />

                            <ImageButton
                                android:id="@+id/btnVehiclesCollapse"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="white"
                                android:contentDescription="@string/menu"
                                android:src="@drawable/chevron_up_small_primary"
                                android:visibility="gone"
                                tools:src="@drawable/chevron_up_small_primary" />
                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/vehiclesContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">



                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="100sp"
                                tools:itemCount="30"
                                />
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/add_new_car"
                                android:layout_margin="10sp"
                                style="@style/infoButton"
                                android:id="@+id/btnNewVehicle"/>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

        <include layout="@layout/bottom_navigation" />
    </LinearLayout>

    <include layout="@layout/loading_layout" />
</RelativeLayout>
