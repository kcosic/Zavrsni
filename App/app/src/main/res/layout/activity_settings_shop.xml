<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            style="@style/app_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    style="@style/card_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llAccountSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                style="@style/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/account_info"
                                android:textAlignment="center" />

                            <ImageView
                                android:id="@+id/ivAccountInfoExpand"
                                android:layout_width="15sp"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF"
                                android:contentDescription="@string/content_toggle"
                                android:src="@drawable/chevron_down_small_primary"
                                android:visibility="gone"
                                tools:src="@drawable/chevron_down_small_primary" />

                            <ImageView
                                android:id="@+id/ivAccountInfoCollapse"
                                android:layout_width="15sp"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF"

                                android:contentDescription="@string/content_toggle"
                                android:src="@drawable/chevron_up_small_primary"
                                android:visibility="visible"
                                tools:src="@drawable/chevron_up_small_primary" />

                            <ImageView
                                android:id="@+id/ivAccountInfoSave"
                                android:layout_width="15sp"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF"
                                android:contentDescription="@string/content_toggle"

                                android:src="@drawable/floppy_disk_solid"
                                android:visibility="gone" />
                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/accountInfoContent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:labelFor="@+id/etEmail"
                                    android:text="@string/email" />

                                <EditText
                                    android:id="@+id/etEmail"
                                    style="@style/textField"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="6"
                                    android:autofillHints=""
                                    android:enabled="false"
                                    android:inputType="textEmailAddress" />

                                <ImageButton
                                    android:id="@+id/btnEditEmail"
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#FFFFFF"

                                    android:contentDescription="@string/menu"
                                    android:src="@drawable/pen_to_square_small_primary"
                                    tools:ignore="TouchTargetSizeCheck"
                                    tools:src="@drawable/pen_to_square_small_primary" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"

                                    android:text="@string/password" />

                                <Button
                                    android:id="@+id/btnResetPassword"
                                    style="@style/info_button"
                                    android:layout_width="0sp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="7"
                                    android:text="@string/reset_password" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/card_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llShopInfoSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                style="@style/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/repair_shop_info"
                                android:textAlignment="center" />

                            <ImageView
                                android:id="@+id/ivShopInfoExpand"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF"
                                android:contentDescription="@string/content_toggle"
                                android:src="@drawable/chevron_down_small_primary"
                                android:visibility="gone"

                                tools:ignore="TouchTargetSizeCheck"
                                tools:src="@drawable/chevron_down_small_primary" />

                            <ImageView
                                android:id="@+id/ivShopInfoCollapse"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF"
                                android:contentDescription="@string/content_toggle"

                                android:src="@drawable/chevron_up_small_primary"
                                android:visibility="visible"
                                tools:src="@drawable/chevron_up_small_primary" />

                            <ImageView
                                android:id="@+id/ivShopInfoSave"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF"
                                android:contentDescription="@string/content_toggle"

                                android:src="@drawable/floppy_disk_solid"
                                android:visibility="gone"
                                tools:src="@drawable/chevron_up_small_primary" />
                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/llShopInfoContent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:labelFor="@id/etFirstName"
                                    android:text="@string/legal_name" />

                                <EditText
                                    android:id="@+id/etLegalName"
                                    style="@style/textField"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="6"
                                    android:autofillHints=""
                                    android:enabled="false"
                                    android:inputType="text" />

                                <ImageButton
                                    android:id="@+id/btnEditLegalName"
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"

                                    android:background="#FFFFFF"
                                    android:contentDescription="@string/edit_row"
                                    android:src="@drawable/pen_to_square_small_primary"
                                    tools:ignore="TouchTargetSizeCheck"
                                    tools:src="@drawable/pen_to_square_small_primary" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:labelFor="@id/etLastName"
                                    android:text="@string/short_name" />

                                <EditText
                                    android:id="@+id/etShortName"
                                    style="@style/textField"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="6"
                                    android:autofillHints=""
                                    android:enabled="false"
                                    android:inputType="text"
                                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                                <ImageButton
                                    android:id="@+id/btnEditShortName"
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"

                                    android:background="#FFFFFF"
                                    android:contentDescription="@string/edit_row"
                                    android:src="@drawable/pen_to_square_small_primary"
                                    tools:ignore="TouchTargetSizeCheck"
                                    tools:src="@drawable/pen_to_square_small_primary" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:labelFor="@id/etDob"
                                    android:text="@string/vat_id" />

                                <EditText
                                    android:id="@+id/etVat"
                                    style="@style/textField"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="6"
                                    android:autofillHints=""
                                    android:enabled="false"
                                    android:inputType="date"
                                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                                <ImageButton
                                    android:id="@+id/btnEditVat"
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#FFFFFF"

                                    android:contentDescription="@string/edit_row"
                                    android:src="@drawable/pen_to_square_small_primary"
                                    tools:ignore="TouchTargetSizeCheck"
                                    tools:src="@drawable/pen_to_square_small_primary" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/card_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llShopSettingsSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                style="@style/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/repair_shop_settings"
                                android:textAlignment="center" />

                            <ImageView
                                android:id="@+id/ivShopSettingsExpand"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF"
                                android:contentDescription="@string/content_toggle"
                                android:src="@drawable/chevron_down_small_primary"
                                android:visibility="gone"

                                tools:ignore="TouchTargetSizeCheck"
                                tools:src="@drawable/chevron_down_small_primary" />

                            <ImageView
                                android:id="@+id/ivShopSettingsCollapse"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF"
                                android:contentDescription="@string/content_toggle"

                                android:src="@drawable/chevron_up_small_primary"
                                android:visibility="visible"
                                tools:src="@drawable/chevron_up_small_primary" />

                            <ImageView
                                android:id="@+id/ivShopSettingsSave"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF"
                                android:contentDescription="@string/content_toggle"

                                android:src="@drawable/floppy_disk_solid"
                                android:visibility="gone"
                                tools:src="@drawable/chevron_up_small_primary" />
                        </LinearLayout>


                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/llShopSettingsContent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:labelFor="@+id/etCapacity"
                                    android:text="@string/car_capacity" />

                                <EditText
                                    android:id="@+id/etCapacity"
                                    style="@style/textField"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="6"
                                    android:autofillHints=""
                                    android:enabled="false"
                                    android:inputType="number" />

                                <ImageButton
                                    android:id="@+id/btnEditCapacity"
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#FFFFFF"
                                    android:contentDescription="@string/menu"
                                    android:src="@drawable/pen_to_square_small_primary"
                                    tools:ignore="TouchTargetSizeCheck"
                                    tools:src="@drawable/pen_to_square_small_primary" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:labelFor="@+id/etHourlyRate"
                                    android:text="@string/hourly_rate" />

                                <EditText
                                    android:id="@+id/etHourlyRate"
                                    style="@style/textField"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="6"
                                    android:autofillHints=""
                                    android:enabled="false"
                                    android:inputType="number" />

                                <ImageButton
                                    android:id="@+id/btnEditHourlyRate"
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#FFFFFF"

                                    android:contentDescription="@string/menu"
                                    android:src="@drawable/pen_to_square_small_primary"
                                    tools:ignore="TouchTargetSizeCheck"
                                    tools:src="@drawable/pen_to_square_small_primary" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"
                                    android:labelFor="@+id/etWorkHoursStart"
                                    android:text="@string/work_hours" />

                                <EditText
                                    android:id="@+id/etWorkHoursStart"
                                    style="@style/textField"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="2"
                                    android:autofillHints=""
                                    android:enabled="false"
                                    android:inputType="number" />

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:labelFor="@+id/etEmail"
                                    android:text=" - "
                                    android:textFontWeight="1000"
                                    tools:ignore="HardcodedText,UnusedAttribute" />

                                <EditText
                                    android:id="@+id/etWorkHoursEnd"
                                    style="@style/textField"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="2"
                                    android:autofillHints=""
                                    android:enabled="false"
                                    android:inputType="number" />

                                <ImageButton
                                    android:id="@+id/btnEditWorkHours"
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#FFFFFF"

                                    android:contentDescription="@string/menu"
                                    android:src="@drawable/pen_to_square_small_primary"
                                    tools:ignore="TouchTargetSizeCheck"
                                    tools:src="@drawable/pen_to_square_small_primary" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="48sp"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    style="@style/textView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="3"

                                    android:text="@string/work_days" />

                                <LinearLayout

                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="7"
                                    android:orientation="horizontal">

                                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                                        android:id="@+id/fabMonday"
                                        style="@style/primary_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30sp"
                                        android:layout_gravity="center"
                                        android:layout_margin="1sp"
                                        tools:ignore="ContentDescription,TooDeepLayout" />

                                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                                        android:id="@+id/fabTuesday"
                                        style="@style/primary_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30sp"
                                        android:layout_gravity="center"
                                        android:layout_margin="1sp"
                                        tools:ignore="ContentDescription,TooDeepLayout" />

                                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                                        android:id="@+id/fabWednesday"
                                        style="@style/primary_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30sp"
                                        android:layout_gravity="center"
                                        android:layout_margin="1sp"
                                        tools:ignore="ContentDescription,TooDeepLayout" />

                                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                                        android:id="@+id/fabThursday"
                                        style="@style/primary_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30sp"
                                        android:layout_gravity="center"
                                        android:layout_margin="1sp"
                                        tools:ignore="ContentDescription,TooDeepLayout" />

                                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                                        android:id="@+id/fabFriday"
                                        style="@style/primary_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30sp"
                                        android:layout_gravity="center"
                                        android:layout_margin="1sp"
                                        tools:ignore="ContentDescription,TooDeepLayout" />

                                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                                        android:id="@+id/fabSaturday"
                                        style="@style/primary_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30sp"
                                        android:layout_gravity="center"
                                        android:layout_margin="1sp"
                                        tools:ignore="ContentDescription,TooDeepLayout" />

                                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                                        android:id="@+id/fabSunday"
                                        style="@style/white_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30sp"
                                        android:layout_gravity="center"
                                        android:layout_margin="1sp"
                                        tools:ignore="ContentDescription,TooDeepLayout" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/card_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llSystemSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                style="@style/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="@string/system"
                                android:textAlignment="center" />

                            <ImageView
                                android:id="@+id/ivSystemExpand"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF"
                                android:contentDescription="@string/menu"

                                android:src="@drawable/chevron_down_small_primary"
                                android:visibility="gone"
                                tools:ignore="TouchTargetSizeCheck"
                                tools:src="@drawable/chevron_down_small_primary" />

                            <ImageView
                                android:id="@+id/ivSystemCollapse"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF"

                                android:contentDescription="@string/menu"
                                android:src="@drawable/chevron_up_small_primary"
                                android:visibility="visible"
                                tools:src="@drawable/chevron_up_small_primary" />
                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/systemContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <Button
                                android:id="@+id/btnLogout"
                                style="@style/warning_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10sp"
                                android:text="@string/logout" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

        <include layout="@layout/user_bottom_navigation" />
    </LinearLayout>

    <include layout="@layout/loading_layout" />
</RelativeLayout>
