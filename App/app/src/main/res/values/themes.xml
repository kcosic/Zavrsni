<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="buttonStyle">@style/primary_button</item>
        <item name="fontFamily">@font/luis_george_font_family</item>
    </style>

    <style name="modal">
        <item name="android:background">@drawable/dialog_border</item>
        <item name="borderWidth">3sp</item>
        <item name="cornerRadius">100sp</item>

    </style>

    <style name="app_background" parent="Theme.App">
        <item name="android:background">@drawable/background_gradient</item>
    </style>
    <style name="login" parent="Theme.App">
        <item name="android:background">@drawable/background_gradient</item>
    </style>
    <style name="register" parent="Theme.App">
        <item name="android:background">@drawable/background_gradient</item>
    </style>

    <style name="card_style" parent="Theme.App">
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@drawable/edit_text_border</item>

    </style>
    <style name="switch_theme" parent="Theme.App">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primary_500</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/text_dark_300
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/text_dark_300
        </item>

    </style>
    <style name="switch_style" parent="Theme.App">
        <item name="android:textColor">@color/text_dark_300</item>
    </style>
    <style name="menu_button_style" parent="Theme.App">
        <item name="android:background">@color/transparent</item>
        <item name="android:drawable">@drawable/ellipsis_vertical</item>
    </style>
    <style name="readonlyRating" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="android:layout_margin">10sp</item>
        <item name="android:progressTint">@color/primary_500</item>
        <item name="android:secondaryProgressTint">@color/primary_100</item>
    </style>

    <style name="row_item_style" parent="Theme.App">
        <item name="android:background">@color/text_dark_100</item>
        <item name="android:radius">5sp</item>
    </style>

    <style name="review_item" parent="row_item_style">
        <item name="android:layout_marginVertical">5sp</item>

    </style>

    <style name="row_item_title" parent="Theme.App">
        <item name="android:color">@color/text_dark_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textField">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:maxHeight">48sp</item>
        <item name="android:padding">10sp</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="bigTextField">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:padding">10sp</item>

    </style>

    <style name="textView">
        <item name="android:textColor">@color/text_dark_700</item>
    </style>

    <style name="confirm_button">
        <item name="backgroundTint">@color/confirm_500</item>
        <item name="android:textColor">@color/text_dark_500</item>
    </style>
    <style name="primary_button">
        <item name="backgroundTint">@color/primary_500</item>
        <item name="android:textColor">@color/text_dark_100</item>
    </style>

    <style name="white_button">
        <item name="backgroundTint">@color/text_dark_100</item>
        <item name="android:textColor">@color/text_dark_900</item>
    </style>

    <style name="warning_button">
        <item name="backgroundTint">@color/warning_500</item>
        <item name="android:textColor">@color/text_dark_900</item>
    </style>

    <style name="danger_button">
        <item name="backgroundTint">@color/danger_500</item>
        <item name="android:textColor">@color/text_dark_100</item>
    </style>

    <style name="info_button">
        <item name="backgroundTint">@color/information_500</item>
        <item name="android:textColor">@color/text_dark_700</item>
    </style>
    <style name="Theme.App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>